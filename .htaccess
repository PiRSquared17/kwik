# routes for apache

DirectorySlash off #remember to AllowOverride Indexes in apache2.conf
RewriteEngine on

RewriteRule ^$                  /kwik/index.php?controller=show [QSA]
RewriteRule ^(\w*)$             /kwik/index.php?page=$1&controller=show
RewriteRule ^(\w*)/edit$        /kwik/index.php?page=$1&controller=edit

RewriteRule ^apps/              - [F,L]
RewriteRule ^pages/             - [F,L]
